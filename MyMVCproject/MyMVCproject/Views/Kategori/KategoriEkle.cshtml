@model myfirstproject.Models.siniflar.Kategori

@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.js"></script>
<br />
<h2 style=" font-size:25px ">Yeni Kategori Sayfası </h2>
<br />

<form class="form-group" method="post">

    <div>
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(x => x.KategoriAd, new { @class = "form-control" })
        <br />
        <button class="btn btn-info" id="Btn1"> Kaydet </button>
        <script>
            $('#Btn1').click(function () {
                alert("Kategori başarılı bir şekilde eklendi")
            })
        </script>
    </div>
</form>
