@using MyProject.Models.siniflar
@model List<myfirstproject.Models.siniflar.Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-striped" style="margin-top:20px; background-color: cornsilk" ">
    <tr>
        <th>ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Görsel</th>
        <th>Departman</th>
        <th>Güncelle</th>
        <th>Satışlar</th>
    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.PersonelId</td>
            <td>@x.PersonelAd</td>
            <td>@x.PersonelSoyad</td>
            <td>
                <img  src="@x.PersonelGorsel" style="width:100px; height:90px"/>
            </td>
            <td>@x.Departman.DepartmanAd</td>
            <td><a href="/Personel/PersonelGetir/@x.PersonelId" class="btn btn-success"> Güncelle  </a></td>
            <td><a href="/Departman/DptPersonelSatis/@x.PersonelId" class="btn btn-default" style="background-color: lightseagreen; color:white "> Satışlar </a></td>
             @*departman detay sayfası ile aynı işlem olduğundan aynı controllara yönlendirdik*@
        </tr>
    }
</table>
<a href="/Personel/PersonelEkle/" class="btn btn-info"> Yeni Personel </a>

