@model IEnumerable<myfirstproject.Models.groupsiniflar.TabloGrup4>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Kategori-Ürün Tablosu</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Kategori Adı</th>
                    <th>İşlem Bar</th>
                    <th style="width: 40px">Ürün</th>
                </tr>
            </thead>
            <tbody>
                @{ int sirano = 0;}
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@{sirano++;} @sirano</td>
                        <td>@x.Kategori</td>
                        <td>
                            @if (1 <= x.UrunSayisi && x.UrunSayisi < 3)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                                </div>
                            }
                            @if (3 <= x.UrunSayisi && x.UrunSayisi < 5)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 70%"></div>
                                </div>
                            }
                            @if (x.UrunSayisi > 4)
                            {
                                <div class="progress progress-xs progress-striped active">
                                    <div class="progress-bar bg-success" style="width:90%"></div>
                                </div>
                            }

                        </td>
                        <td>
                            @if (1 <= x.UrunSayisi && x.UrunSayisi < 3)
                            {
                                <span class="badge bg-danger">@x.UrunSayisi</span>
                            }
                            @if (3 <= x.UrunSayisi && x.UrunSayisi < 5)
                            {
                                <span class="badge bg-warning">@x.UrunSayisi</span>
                            }
                            @if (x.UrunSayisi > 4)
                            {
                                <span class="badge bg-success">@x.UrunSayisi</span>
                            }
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
