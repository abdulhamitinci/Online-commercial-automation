@model IEnumerable<myfirstproject.Models.groupsiniflar.TabloGrup3>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Markalar </h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Marka</th>
                    <th>Bar</th>
                    <th style="width: 40px">Ürün</th>
                </tr>
            </thead>
            <tbody>
                @{ int sirano = 0;}
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@{sirano++;} @sirano</td>
                        <td>@x.Marka</td>
                        <td>
                            @if (1 <= x.Sayi && x.Sayi < 3)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                                </div>
                            }
                            @if (3 <= x.Sayi && x.Sayi < 5)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 70%"></div>
                                </div>
                            }
                            @if (x.Sayi > 4)
                            {
                                <div class="progress progress-xs progress-striped active">
                                    <div class="progress-bar bg-success" style="width:90%"></div>
                                </div>
                            }

                        </td>
                        <td>
                            @if (1 <= x.Sayi && x.Sayi < 3)
                            {
                                <span class="badge bg-danger">@x.Sayi</span>
                            }
                            @if (3 <= x.Sayi && x.Sayi < 5)
                            {
                                <span class="badge bg-warning">@x.Sayi</span>
                            }
                            @if (x.Sayi > 4)
                            {
                                <span class="badge bg-success">@x.Sayi</span>
                            }
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->